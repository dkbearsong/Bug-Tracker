<%- include("partials/header") -%>
<%- include("partials/sidebar") -%>
<%- include("partials/navbar") -%>

  <!-- Begin Page Content -->
  <div class="container-fluid">
    <!-- Page Heading -->
    <form class="" action="/profile" method="post">
      <h1 class="container h3 mb-4 text-gray-800"><%= userProfile.name %> </h1>
      <div class="container bt-container bt-container2 bt-vert-spacer bt-header-spacer">
        <div class="bt-block bt-vert-spacer">
          <input type="text" name="first_name" placeholder="First Name" class="bt-outline bt-gray-text bt-vert-spacer bt-hz-spacer1" value="<%= userProfile.first_name %>"/>
          <input type="text" name="last_name" placeholder="Last Name" class="bt-outline bt-gray-text bt-vert-spacer" value="<%= userProfile.last_name %>"/>
        </div>
        <div class="bt-block bt-vert-spacer">
          <input type="email" name="email" placeholder="Email address" class="bt-block bt-outline bt-gray-text bt-vert-spacer bt-input-framing form-control" value="<%= userProfile.email %>">
        </div>
        <div class="bt-block bt-vert-spacer">
          <label for="phone_number">Phone Number:</label>
          <br/>
          <input type="tel" name="phone_number" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="123-456-7890" class="bt-outline bt-gray-text bt-vert-space bt-hz-spacer1 " value="<%= userProfile.phone %>"/>
          X <input type="tel" name="extension" placeholder="ext." class="bt-outline bt-gray-text bt-vert-spacer" pattern="[0-9]" value="<%= userProfile.ext %>" />

        </div>
        <div class="bt-block bt-vert-spacer">
          <div class="bt-block bt-vert-spacer">
            <input type="text" name="address_1" placeholder="Address 1" class="bt-outline bt-gray-text bt-vert-spacer form-control" value="<%= userProfile.address_1 %>"/>
          </div>
          <div class="bt-block bt-vert-spacer">
            <input type="text" name="address_2" placeholder="Address 2" class="bt-outline bt-gray-text bt-vert-spacer form-control" value="<%= userProfile.address_2 %>"/>
          </div>
          <div class="bt-block bt-vert-spacer">
            <input type="text" name="city" placeholder="City" class="bt-outline bt-gray-text bt-vert-spacer bt-hz-spacer1" value="<%= userProfile.city %>" />
            <select name="state" class="bt-outline bt-gray-text bt-vert-spacer bt-hz-spacer1">
              <% states.forEach((state) => { %>
                <% if (state.val === userProfile.state) { %>
                  <option value="<%= state.val %>" selected><%= state.name %></option>
                <% } else { %>
                  <option value="<%= state.val %>"><%= state.name %></option>
                <% }}); %>
            </select>
            <input type="text" name="zipcode" placeholder="Zipcode" class="bt-outline bt-gray-text bt-vert-spacer" value="<%= userProfile.zipcode %>"/>
          </div>
          <div class="bt-block bt-vert-spacer">
            <input type="text" name="auth0" placeholder="Auth0 ID" class="bt-outline bt-gray-text bt-vert-spacer form-control" value="<%= userProfile.auth0_id %>"/>
          </div>
          <input type="text" name="user_id" id="user_id" value="<%= userProfile.id %>" class="bt-no-display">
        </div>
        <button type="submit" class="btn btn-primary btn-icon-split bt-vert-spacer">
          <span class="icon text-white-50">
            <i class="fas fa-flag"></i>
          </span>
          <span class="text">Submit</span>
        </button>
      </form>
  </div>
</div>

<%- include("partials/footer") -%>
